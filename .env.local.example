# Supabase Configuration
# Get these values from your Supabase project settings -> API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Edge Functions (if needed for development)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Maps API (for location features)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# External API Keys (stored as Supabase Secrets in production)
# These are used in Edge Functions
OPENAI_API_KEY=your-openai-api-key-here
RESEND_API_KEY=your-resend-api-key-here
DEEPSOURCE_API_TOKEN=your-deepsource-token-here

# PWA Configuration
VITE_APP_NAME=Leasy
VITE_APP_SHORT_NAME=Leasy
VITE_APP_DESCRIPTION=Property Listing Management Platform
VITE_APP_VERSION=1.0.0

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false